<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_stack_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffee00"
    >
    <TextView
        android:id="@+id/widget_stock_symbol"
        style="@style/WidgetStockSymbolTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/widget_margin"
        android:paddingStart="@dimen/widget_margin"
        android:gravity="start|center_vertical"
        tools:text="GOOG"
        android:contentDescription="@string/a11y_widget_stock_symbol"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingStart="@dimen/widget_margin"
        android:paddingEnd="@dimen/widget_margin"
        >
        <TextView
            android:id="@+id/widget_bid_price"
            style="@style/WidgetBidPriceTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="@dimen/widget_margin"
            android:paddingEnd="@dimen/widget_margin"
            tools:text="1000.00"
            android:contentDescription="@string/a11y_widget_stock_price"
            />
        <TextView
            android:id="@+id/widget_change"
            android:background="@drawable/percent_change_pill"
            style="@style/WidgetPercentChangeTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="100%"
            android:paddingStart="@dimen/space_tiny"
            android:paddingEnd="@dimen/space_tiny"
            android:contentDescription="@string/a11y_widget_stock_price_change"
            />
    </LinearLayout>
</LinearLayout>